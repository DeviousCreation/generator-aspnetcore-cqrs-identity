@page "/resend-verification"
@model Auth.RequestVerification
@{
}
<section id="wrapper" class="login-register login-sidebar" style="background-image:url(https://picsum.photos/1920/1080);">
    <div class="login-box card">
        <div class="card-body">
            <form class="form-horizontal form-material">
                <a href="#" class="text-center d-block"><img src="~/myci-logo-100.png" alt="Home" /></a>
                <h3 class="p-2 rounded-title mt-4 mb-0">Resend Verification</h3><small>Enter your Email and instructions will be sent to you! </small>
                <div class="form-group mt-3">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" asp-for="PageModel.Credential" placeholder="Email">
                        <span asp-validation-for="PageModel.Credential"></span>
                    </div>
                </div>
                <div class="form-group text-center mt-3">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Resend</button>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <div class="col-sm-12 text-center">
                        Already have an account? <a asp-page="../SignIn/SignIn" class="text-info ml-1"><b>Sign In</b></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>