@page "/reset-password"
@using DeviousCreation.CqrsIdentity.Web.Infrastructure.Constants
@model DeviousCreation.CqrsIdentity.Web.Pages.Auth.UpdatePassword
@{
}

    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(https://picsum.photos/1920/1080);">
        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material" id="loginform" method="post">
                    <a href="#" class="text-center d-block"><img src="~/myci-logo-100.png" alt="Home" /></a>
                    <h3 class="p-2 rounded-title mt-4 mb-0">Set up</h3>
                    <small>Complete the following to set up the first user.</small>
                    @if (Model.PrgState == PrgState.Success)
                    {
                        <div class="mt-10">
                            <p>Thanks. Your password has been request. You can click <a asp-page="Auth/SignIn">here</a> to sign in to your account.</p>
                        </div>
                    }
                    else
                    {
                        if (Model.PrgState == PrgState.Failed)
                        {
                            <div class="mt-10">
                                <p>Sorry, that didn't seem to work. You can try again, or click <a asp-page="Auth/RequestReset">here</a> to request a new code</p>
                            </div>
                        }

                        <input type="hidden" asp-for="PageModel.Token" />

                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" asp-for="PageModel.Password" type="password" placeholder="Password">
                                <span asp-validation-for="PageModel.Password"></span>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" asp-for="PageModel.PasswordConfirmation" type="password" placeholder="Password Confirmation">
                                <span asp-validation-for="PageModel.PasswordConfirmation"></span>
                            </div>
                        </div>
                        <div class="form-group text-center mt-3">
                            <div class="col-xs-12">
                                <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                            </div>
                        </div>
                    }

                </form>
            </div>
        </div>
    </section>