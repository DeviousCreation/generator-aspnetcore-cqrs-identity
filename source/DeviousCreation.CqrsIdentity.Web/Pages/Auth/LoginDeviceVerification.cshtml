@page
@model DeviousCreation.CqrsIdentity.Web.Pages.Auth.LoginDeviceVerificationModel
@{
}
<section id="wrapper" class="login-register login-sidebar" style="background-image:url(https://picsum.photos/1920/1080);">
    <div class="login-box card">
        <div class="card-body">
            <form class="form-horizontal form-material" asp-antiforgery="true" method="post">
                <a href="#" class="text-center d-block"><img src="~/myci-logo-100.png" alt="Home" /></a>
                <h3 class="p-2 rounded-title mt-4 mb-0">Insert your security key</h3>
                <small>Press the button on your security key. If your security key has no button, re-insert it.</small>
                <div>
                    <span>Please press the button on your security key…</span>
                </div>
                <div class="ml-auto">
                    <a asp-page="/Auth/RequestReset" id="to-recover" class="text-muted"><i class="fa fa-lock mr-1"></i> Forgot pwd?</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/loginDeviceVerification.js" asp-append-version="true"></script>
}
