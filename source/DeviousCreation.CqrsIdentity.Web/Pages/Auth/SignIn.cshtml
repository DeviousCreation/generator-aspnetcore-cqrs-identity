@page "/sign-in"
@using DeviousCreation.CqrsIdentity.Web.Infrastructure.Constants
@model Auth.SignIn
@{
}

    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(https://picsum.photos/1920/1080);">
        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material" asp-antiforgery="true" method="post" asp-route-returnurl="@Model.ReturnUrl">
                    <a href="#" class="text-center d-block"><img src="~/myci-logo-100.png" alt="Home" /></a>
                    <div class="form-group mt-4">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" asp-for="PageModel.EmailAddress" placeholder="Email Address">
                            <span asp-validation-for="PageModel.EmailAddress"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" asp-for="PageModel.Password" placeholder="Password">
                            <span asp-validation-for="PageModel.Password"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-flex no-block align-items-end justify-content-end">
                            <a asp-page="@(PageLocations.Auth_RequestReset)" id="to-recover" class="text-muted"><i class="fa fa-lock mr-1"></i> Forgot password?</a>
                        </div>
                    </div>
                    <div class="form-group text-center mt-3">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                    <div class="form-group mb-0">
                        <div class="col-sm-12 text-center">
                            Missing your welcome email? <a asp-page="@(PageLocations.Auth_RequestVerification)" class="text-primary ml-1"><b>Resend</b></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>