                        </div>
                    </center>
                </div>
            </div>
        </div>
        <!-- Column -->
        <!-- Column -->
        <div class="col-lg-8 col-xlg-9 col-md-7">
            <div class="card">
                <div class="card">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs profile-tab" role="tablist" id="profileTabs">
                        <li class="nav-item"> <a class="nav-link " role="tab" asp-page="/App/Profile/Details">My Details</a> </li>
                        <li class="nav-item"> <a class="nav-link active" role="tab" asp-page="/App/Profile/Password">Password</a> </li>
                        <li class="nav-item"> <a class="nav-link " role="tab" asp-page="/App/Profile/AuthenticatorApp">Authenticator App</a> </li>
                        <li class="nav-item"> <a class="nav-link" role="tab" asp-page="/App/Profile/SecurityKeys">Security Keys</a> </li>
                        <li class="nav-item"> <a class="nav-link" role="tab" asp-page="/App/Profile/PersonalData">Personal Data</a> </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="password" role="tabpanel">
                            <div class="card-body">
                                <form method="post" class="form-horizontal form-material">
                                    <div class="form-group">
                                        <label asp-for="PageModel.OldPassword" class="col-md-12">OldPassword</label>
                                        <div class="col-md-12">
                                            <input asp-for="PageModel.OldPassword" class="form-control form-control-line" type="password">
                                            <span asp-validation-for="PageModel.OldPassword"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PageModel.NewPassword" class="col-md-12">NewPassword</label>
                                        <div class="col-md-12">
                                            <input asp-for="PageModel.NewPassword" class="form-control form-control-line" type="password">
                                            <span asp-validation-for="PageModel.NewPassword"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PageModel.ConfirmPassword" class="col-md-12">ConfirmPassword</label>
                                        <div class="col-md-12">
                                            <input asp-for="PageModel.ConfirmPassword" class="form-control form-control-line" type="password">
                                            <span asp-validation-for="PageModel.ConfirmPassword"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button class="btn btn-info text-white">Update Password</button>
                                        </div>
                                    </div>
