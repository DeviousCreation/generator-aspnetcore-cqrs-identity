@{
    Layout = "Shared/_Layout";
}
@section styles
{
    <link rel="stylesheet" href="~/theme.css" asp-append-version="true" />
    @RenderSection("styles", false)
}
<div id="main-wrapper">
    <header class="topbar">
        <nav class="navbar top-navbar navbar-expand-md navbar-light">
            <div class="navbar-header">
                <a class="navbar-brand" asp-page="/Dashboard/Index">
                    <b><img src="~/myci-logo-standalone-35.png" alt="homepage" class="light-logo" /></b>
                    <span><img src="~/myci-logo-text-35.png" class="light-logo" alt="homepage" style="height: 25px;" /></span>
                </a>
            </div>
            <div class="navbar-collapse">
                <ul class="navbar-nav mr-auto mt-md-0">
                    <li class="nav-item">
                        <a class="nav-link nav-toggler hidden-md-up text-muted waves-effect waves-dark"><i class="icon-menu"></i></a>
                    </li>
                    <li class="nav-item hidden-sm-down search-box">
                        <a class="nav-link hidden-sm-down text-muted waves-effect waves-dark" href="javascript:void(0)"><i class="icon-search"></i></a>
                        <form class="app-search">
                            <input type="text" class="form-control" placeholder="Search & enter"> <a class="srh-btn"><i class="icon-cancel"></i></a>
                        </form>
                    </li>
                </ul>
                <ul class="navbar-nav my-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark" href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="https://www.gravatar.com/avatar/00000000000000000000000000000000" alt="user" class="profile-pic m-r-10" />Markarn Doe
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <aside class="left-sidebar">
        <!-- Sidebar scroll-->
        <div class="scroll-sidebar">
            <!-- Sidebar navigation-->
            <nav class="sidebar-nav">
                <ul  class="metismenu" id="sidebarnav">
                <li>
                    <a href="#" class="has-arrow">User Management</a>
                    <ul>
                        <li>
                            <a asp-page="/App/Users/Index">Users</a>
                        </li>
                        <li>
                            <a asp-page="/App/Roles/Index">Roles</a>
                        </li>
                    </ul>
                </li>
                </ul>
            </nav>
            <!-- End Sidebar navigation -->
        </div>
        <!-- End Sidebar scroll-->
        <!-- Bottom points-->
        <div class="sidebar-footer">
            <!-- item--><a asp-page="/App/Profile/Details" class="link" data-toggle="tooltip" title="Settings"><i class="icon-cog"></i></a>
            <!-- item--><a href="" class="link" data-toggle="tooltip" title="Email"><i class="icon-mail"></i></a>
            <!-- item--><a asp-page="/Auth/SignedOut" class="link" data-toggle="tooltip" title="Logout"><i class="icon-power"></i></a>
        </div>
        <!-- End Bottom points-->
    </aside>

    <div class="page-wrapper">
        @RenderBody()
        <footer class="footer"> © 2017 Material Pro Admin by wrappixel.com </footer>
    </div>
</div>

@section scripts
{
    @RenderSection("scripts", false)
}
