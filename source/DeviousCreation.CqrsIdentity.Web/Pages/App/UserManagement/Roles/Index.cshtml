@page "/app/user-management/roles"
@model DeviousCreation.CqrsIdentity.Web.Pages.App.UserManagement.Roles.Index
@{
}
<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Users</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/App/Index">Home</a></li>
                <li class="breadcrumb-item">User Management</li>
                <li class="breadcrumb-item active">Roles</li>
            </ol>
        </div>
    </div>

    
    <div class="row">
        <div class="col-12">
            <!-- Column -->
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">User Management</h3>
                    <h6 class="card-subtitle">Create new, edit existing, or change the password of the users of TenantInfo.Name</h6>
                    <div class="table-responsive">
                        <table class="table" id="users">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayName("Name")</th>
                                    <th>@Html.DisplayName("Resource Total")</th>
                                    @*    <th>@Html.DisplayName("LastLogin")</th>
                                        <th>@Html.DisplayName("Role")</th>
                                        <th>@Html.DisplayName("Lock out Enabled")</th>
                                        <th>@Html.DisplayName("Status")</th>
                                        <th></th>
                                        <th></th>*@
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-between">
                            <div class="mr-auto">
                                <a asp-page="/App/UserManagement/Roles/Create" class="btn btn-info text-white">Create new Role</a>
                            </div>
                            <nav aria-label="Page navigation ml-auto">
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/x-template" id="actions">
        <div>
            <a data-edit href="@Url.PageLink(pageName: "/App/UserManagement/Roles/EditRole", values: new {id = "__ID__"})">Edit</a>
        </div>
    </script>
    <script src="~/role-listing.js" asp-append-version="true"></script>
}
