@using DeviousCreation.CqrsIdentity.Core.Settings
@using Microsoft.Extensions.Options
@inject IOptions<SiteSettings> SiteSettings
@{
    var siteName = ViewData["Title"] != null ? $"{ViewData["Title"]} | {SiteSettings.Value.Name}" : SiteSettings.Value.Name;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@siteName</title>
    <link href="~/vendor.css" rel="stylesheet" asp-append-version="true">
    <link href="~/theme.css" rel="stylesheet" asp-append-version="true">
    <link href="~/app.css" rel="stylesheet" asp-append-version="true">
</head>
@RenderSection("styles", false)
<body class="fix-header fix-sidebar card-no-border">
